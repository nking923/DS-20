#include<stdio.h>
main()
{
	int a[100];
	int n,i,j,temp,min;
	temp=0;
	printf("enter n: ");
	scanf("%d",&n);
	printf("enter elements:\n");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	for(i=0;i<n-1;i++)
	{
		min=i;
		for(j=i+1;j<n;j++)
		{
			if(a[j]<a[min])
			{
				min=j;
			}
		}
		temp=a[i];
		a[i]=a[min];
		a[min]=temp;	
	}
	printf("sorted array:");
	for(i=0;i<n;i++)
	{
		printf("%d ",a[i]);
	}
}


using functions:
#include<stdio.h>
int selectionsort(int a[],int n)
{
	int i,j,min,temp;
	for(i=0;i<n-1;i++)
	{
		min=i;
		for(j=i+1;j<n;j++)
		{
			if(a[j]<a[min])
			{
				min=j;
			}
		}
		temp=a[i];
		a[i]=a[min];
		a[min]=temp;
	}
}
main()
{
	int a[100],n,i;
	printf("enter n: ");
	scanf("%d",&n);
	printf("enter array elements: ");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	selectionsort(a,n);
	printf("sorted array:\n");
	for(i=0;i<n;i++)
	{
		printf("%d ",a[i]);
	}
}
